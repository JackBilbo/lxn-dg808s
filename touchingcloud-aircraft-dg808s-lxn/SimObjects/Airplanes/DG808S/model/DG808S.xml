<?xml version="1.0" encoding="utf-8" ?>
<ModelInfo>
	<LODS>
		<!-- Highest LOD -->
		<!-- minimum display size in % (should be bounding sphere vertical screen size, sphere will often be slightly larger than you expect) -->
		<!-- default minSize is 0 -->
		<LOD minSize="80" 	ModelFile="DG808S_LOD00.gltf"/>
		<LOD minSize="0" 	ModelFile="DG808S_LOD01.gltf"/>
	</LODS>
	
	<Behaviors>
		<Include ModelBehaviorFile="Asobo\Exterior.xml"/>
		<Include RelativeFile="DG808S_FX.xml"/>
		<Component ID="DG808S">
			<UseTemplate Name="DG808S_FX" />
		</Component>

		<Component ID="Custom_code">
			<UseTemplate Name="ASOBO_GT_Update">
				<FREQUENCY>30</FREQUENCY>
				<UPDATE_CODE>

				</UPDATE_CODE>
			</UseTemplate>
		</Component>
		
		<Component ID="JET_ANIM">
			<UseTemplate Name="ASOBO_GT_Anim_Code">
				<ANIM_NAME>JET_ANIM</ANIM_NAME>
				<ANIM_LENGTH>100</ANIM_LENGTH>
				<ANIM_CODE>
					(A:GENERAL ENG STARTER:1, bool)
					(A:GENERAL ENG RPM:1, rpm) 1000 &gt; or
					(A:ENG COMBUSTION:1, bool) or
					(A:ENG N2 RPM:1, percent) 1 &gt; or
					100 *
				</ANIM_CODE>
				<ANIM_LAG>10</ANIM_LAG>
			</UseTemplate>
		</Component>	

		<Component ID="CG_HOOK_ANIM">
			<UseTemplate Name="ASOBO_GT_Anim_Code">
				<ANIM_NAME>CG_hook</ANIM_NAME>
				<ANIM_LENGTH>100</ANIM_LENGTH>
				<ANIM_CODE>
					(A:WATER RUDDER HANDLE POSITION, percent) 50 != 100 *
				</ANIM_CODE>
				<ANIM_LAG>500</ANIM_LAG>
			</UseTemplate>
		</Component>	
		
		<Component ID="r_wing_flex_ANIM">
			<UseTemplate Name="ASOBO_GT_Anim_Code">
				<ANIM_NAME>r_wing_flex</ANIM_NAME>
				<ANIM_LENGTH>100</ANIM_LENGTH>
				<ANIM_CODE>
					50 (A:WING FLEX PCT:2, percent) 0.5 * +
					(A:AIRSPEED INDICATED, knots) 180 &gt; if{
						(E:ABSOLUTE TIME, seconds) 10 * 1 % pi * 2 * sin (A:AIRSPEED INDICATED, knots) 180 - 50 min * +
					}
				</ANIM_CODE>
				<ANIM_LAG>500</ANIM_LAG>
			</UseTemplate>
		</Component>	
		
		<Component ID="l_wing_flex_ANIM">
			<UseTemplate Name="ASOBO_GT_Anim_Code">
				<ANIM_NAME>l_wing_flex</ANIM_NAME>
				<ANIM_LENGTH>100</ANIM_LENGTH>
				<ANIM_CODE>
					50 (A:WING FLEX PCT:2, percent) 0.5 * +
					(A:AIRSPEED INDICATED, knots) 180 &gt; if{
						(E:ABSOLUTE TIME, seconds) 10 * 1 % pi * 2 * sin (A:AIRSPEED INDICATED, knots) 180 - 50 min * +
					}
				</ANIM_CODE>
				<ANIM_LAG>500</ANIM_LAG>
			</UseTemplate>
		</Component>	
		
